@model IEnumerable<CMCS.Web.Models.Claim>
@{
    ViewData["Title"] = "My Claims";
    var lecturerId = (int)ViewBag.LecturerId;
}

<h2>My Claims</h2>

<div class="mb-3">
    <a class="btn btn-success" href="/Claims/Create?lecturerId=@lecturerId">Submit New Claim</a>
</div>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-light">
        <tr>
            <th>Date</th>
            <th>Hours</th>
            <th>Rate</th>
            <th>Amount</th>
            <th>Status</th>
            <th>Documents</th>
            <th>Notes</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.ClaimDate.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                <td>@c.HoursWorked</td>
                <td>@c.HourlyRate:C2</td>
                <td>@(c.HoursWorked* c.HourlyRate):C2</td>
                <td>
                    <span class="badge @(c.Status == CMCS.Web.Models.ClaimStatus.Pending ? "bg-warning" : c.Status == CMCS.Web.Models.ClaimStatus.Approved ? "bg-success" : "bg-danger")">
                        @c.Status
                    </span>
                </td>
                <td>
                    @foreach (var d in c.Documents)
                    {
                        <div><a href="@Url.Action("DownloadDoc", "Claims", new { id = d.SupportingDocumentId })">@d.FileName</a></div>
                    }
                </td>
                <td>@(c.Notes ?? "")</td>
            </tr>
        }
    </tbody>
</table>
