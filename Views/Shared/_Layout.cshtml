<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CMCS</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/">CMCS</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><a class="nav-link" href="/Claims/MyClaims">My Claims</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Claims/Create">Submit Claim</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Claims/Pending">Pending Approvals</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Claims/HRReport">HR Report (CSV)</a></li>

                </ul>
            </div>
        </div>
    </nav>

    <div class="container my-4">
        @RenderBody()
    </div>

    <footer class="footer bg-light py-3">
        <div class="container">
            <span class="text-muted">Contract Monthly Claim System &copy; @DateTime.Now.Year</span>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
